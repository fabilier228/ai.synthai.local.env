# ===========================================
# ENVIRONMENT CONFIGURATION FILE - SynthAI
# ===========================================

# Environment
NODE_ENV=development
COMPOSE_PROJECT_NAME=synthai

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL
POSTGRES_DB=synthai_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Keycloak Database
KEYCLOAK_DB=keycloak_db
KEYCLOAK_USER=keycloak_user
KEYCLOAK_PASSWORD=keycloak123

# ===========================================
# KEYCLOAK CONFIGURATION
# ===========================================

# Keycloak Admin
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# Keycloak Settings
KC_DB=postgres
KC_DB_SCHEMA=keycloak
KC_PROXY=edge
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=synthai
KEYCLOAK_FRONTEND_CLIENT_ID=synthai-frontend-client
KEYCLOAK_AUTH_CLIENT_ID=synthai-auth-client
KEYCLOAK_AUTH_CLIENT_SECRET=auth-service-secret
KEYCLOAK_LOGIC_CLIENT_ID=synthai-logic-client
KEYCLOAK_LOGIC_CLIENT_SECRET=logic-service-secret

# ===========================================
# SERVICES CONFIGURATION
# ===========================================

# Auth Service (Node.js)
AUTH_SERVICE_PORT=3001
AUTH_SERVICE_JWT_SECRET=your-super-secret-jwt-key-change-in-production
AUTH_SERVICE_SESSION_SECRET=your-super-secret-session-key-change-in-production

# Logic Service (Spring Boot)
SPRING_JPA_HIBERNATE_DDL_AUTO=update
LOGIC_SERVICE_PORT=8081
SPRING_PROFILES_ACTIVE=docker

# Frontend Service (React)
FRONTEND_PORT=3000

# Nginx
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ===========================================
# REDIS CONFIGURATION
# ===========================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# ===========================================
# MONITORING CONFIGURATION
# ===========================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3030
GRAFANA_ADMIN_PASSWORD=admin

# ===========================================
# SECURITY SETTINGS
# ===========================================

# CORS Origins (comma separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80,http://localhost

# Session Settings
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=lax

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Debug levels
LOG_LEVEL=INFO
DEBUG_MODE=false

# Hot reload (for development)
WATCHPACK_POLLING=true
CHOKIDAR_USEPOLLING=true

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# Uncomment and modify these for production

# NODE_ENV=production
# POSTGRES_PASSWORD=your-secure-production-password
# KEYCLOAK_ADMIN_PASSWORD=your-secure-admin-password
# AUTH_SERVICE_JWT_SECRET=your-production-jwt-secret
# SESSION_COOKIE_SECURE=true
# CORS_ALLOWED_ORIGINS=https://yourdomain.com
# LOG_LEVEL=WARN

# ===========================================
# AUDD AND AZURE CONFIGURATION
# ===========================================

AUDD_API_KEY=931b7f5ddad861ccc2e386dc2917fb51
AUDD_API_URL=https://api.audd.io/
SPRING_AZURE_RESOURCES_API_KEY=your-azure-api-key-here
SPRING_AZURE_RESOURCES_SPEECH_KEY=your-azure-speech-key-here
SPRING_AZURE_RESOURCES_SPEECH_ENDPOINT=your-azure-speech-endpoint-here
SPRING_AZURE_RESOURCES_OPENAI_DEPLOYMENT_NAME=gpt-4
SPRING_AZURE_RESOURCES_REGION=swedencentral
SPRING_AZURE_RESOURCES_API_ENDPOINT=your-azure-endpoint-here
# End of .env.example file